<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable name="keyword" type="String"/>

        <import type="com.winsonmac.core.util.FontUtil"/>

    </data>

    <RelativeLayout android:id="@+id/container"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@drawable/border_radius_background"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_8sdp">

        <TextView android:layout_width="wrap_content"
                  android:gravity="center"
                  android:textSize="@dimen/text_size_16"
                  android:layout_centerInParent="true"
                  android:text="@{keyword}"
                  android:textColor="@color/color_white"
                  app:font="@{FontUtil.FONT_ROBOTO_MEDIUM}"
                  android:layout_height="match_parent"
                  tools:text="ABC\ndasdasd"
                  tools:textColor="@color/colorPrimaryDark"/>

    </RelativeLayout>
</layout>